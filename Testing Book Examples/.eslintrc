{
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "document": false
  },
  "parser": "babel-eslint",
  "rules": {
    "max-len": [1, 120, 2, {"ignoreComments": true}],
    "no-console":  ["error", { "allow": ["warn", "error", "log"] }],
    "import/no-unresolved": "off",
    "semi": [2, "never"],
    "no-plusplus": "off",
    "no-lonely-if": "off",
    "react/no-this-in-sfc": "off",
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  },
  "extends": ["airbnb"]
}
